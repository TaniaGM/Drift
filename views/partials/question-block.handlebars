<div class="container user">
  <div class="row">
    <div class="col-sm-4 sideNav">
      {{#unless questions.admin}}
      <button type="button" class="btn btn-primary profile" data-id="{{questions.id}}">My Profile</button>
      <br>
      <button type="button" class="btn btn-primary feedback" data-id="{{questions.id}}">My Feedback</button>
      <br>
      <button type="button" class="btn btn-primary questions" data-id="{{questions.id}}">Questions</button>
      {{else}}
      <button type="button" class="btn btn-primary profile" data-id="{{questions.id}}">My Profile</button>
      <br>
      <button type="button" class="btn btn-primary getFeedback">Employee Feedback</button>
      <br>
      <button type="button" class="btn btn-primary getAnswers">Employee Answers</button>
      {{/unless}}
    </div>
    <div class="col-sm-8 display">
      <h1>Questions</h1>
      {{!-- question dynamic content --}}
      {{#each questions}}
      <p>{{this.question}}</p>
      <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-secondary active">
          <input type="radio" name="options" id="option1" checked> Active
        </label>
        <label class="btn btn-secondary">
          <input type="radio" name="options" id="option2"> Radio
        </label>
        <label class="btn btn-secondary">
          <input type="radio" name="options" id="option3"> Radio
        </label>
      </div>
      {{/each}}
    </div>
  </div>
</div>
<div class="container user">
  {{#unless questions.admin}}
  <div>
    <form class="newMessage" data-id="{{questions.id}}">
      <div class="form-group">
        <label for="formSubject">Subject</label>
        <input type="email" class="form-control" id="formSubject" aria-describedby="emailHelp">
      </div>
      <div class="form-group">
        <label for="formCategory">Category</label>
        <input type="password" class="form-control" id="formCategory">
      </div>
      <div class="form-group">
        <label for="formMessage">Message</label>
        <textarea class="form-control" id="formMessage" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  {{else}}
  <div>
    <form class="newQuestion">
      <div class="form-group">
        <label for="formQuestion">Question</label>
        <textarea class="form-control" id="formQuestion" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  <form>
    <div class="form-group">
      <label for="exampleInputEmail1">Name</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Email</label>
      <input type="password" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="form-group">
      <label for="exampleFormControlSelect1">Admin Access</label>
      <select class="form-control" id="exampleFormControlSelect1">
        <option>False</option>
        <option>True</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
{{/unless}}
</div>