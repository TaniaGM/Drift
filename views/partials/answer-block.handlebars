<div class="container user">
  <div class="row">
    <div class="col-sm-4 sideNav">
      {{#unless answer.admin}}
      <button type="button" class="btn btn-primary profile" data-id="{{answer.id}}">My Profile</button>
      <br>
      <button type="button" class="btn btn-primary profile" data-id="{{answer.id}}">My Feedback</button>
      <br>
      <button type="button" class="btn btn-primary profile" data-id="{{answer.id}}">Questions</button>
      {{else}}
      <button type="button" class="btn btn-primary profile" data-id="{{answer.id}}">My Profile</button>
      <br>
      <button type="button" class="btn btn-primary profile">Employee Feedback</button>
      <br>
      <button type="button" class="btn btn-primary profile">Employee Answers</button>
      {{/unless}}
    </div>
    <div class="col-sm-8 display">
      <h1>Answers</h1>
      {{!-- dynamic answers rendered --}}
    </div>
  </div>
</div>
<div class="container user">
  {{#unless answer.admin}}
  <div>
    <form class="newMessage" data-id="{{answer.id}}">
      <div class="form-group">
        <label for="formSubject">Subject</label>
        <input type="email" class="form-control" id="formSubject" aria-describedby="emailHelp">
      </div>
      <div class="form-group">
        <label for="formCategory">Category</label>
        <input type="password" class="form-control" id="formCategory">
      </div>
      <div class="form-group">
        <label for="formMessage">Message</label>
        <textarea class="form-control" id="formMessage" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  {{else}}
  <div>
    <form class="newQuestion">
      <div class="form-group">
        <label for="formQuestion">Question</label>
        <textarea class="form-control" id="formQuestion" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  <form>
    <div class="form-group">
      <label for="exampleInputEmail1">Name</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Email</label>
      <input type="password" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="form-group">
      <label for="exampleFormControlSelect1">Admin Access</label>
      <select class="form-control" id="exampleFormControlSelect1">
        <option>False</option>
        <option>True</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
{{/unless}}
</div>